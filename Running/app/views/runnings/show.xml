<Alloy>
  <View id="body" layout="composite" backgroundColor="#fff" width="Ti.UI.FILL" height="Ti.UI.FILL" >
    <View id="androidDialog" zIndex="0" visible="false" opacity="0.8" backgroundColor="#666" layout="composite" width="Ti.UI.FILL" height="Ti.UI.FILL">
      <View bottom="50" height="Ti.UI.SIZE" backgroundColor="#fff" width="Ti.UI.FILL" layout="vertical">
        <Label class="chooseItemLabel" textAlign="center" width="Ti.UI.FILL" height="Ti.UI.SIZE" text="选择跑步方式" />
        <View class="cutLine" height="1" width="Ti.UI.FILL" backgroundColor="#999" />
        <Label id="outRunningLabel" class="chooseItemLabel" textAlign="center" width="Ti.UI.FILL" text="室外跑步" />
        <View class="cutLine" height="1" width="Ti.UI.FILL" backgroundColor="#999" />
        <Label id="roomRunningLabel" class="chooseItemLabel" textAlign="center" width="Ti.UI.FILL" text="室内跑步" />
      </View>
      <Label id="cancerLabel" class="chooseItemLabel" backgroundColor="#fff" width="Ti.UI.FILL" textAlign="center" text="取消" bottom="0" />
    </View>
    <View id="content" top="10" layout="vertical" width="Ti.UI.FILL" height="Ti.UI.FILL" >
      <View layout="vertical" height="Ti.UI.SIZE">
        <Label class="total_journey" text="0.00"/>
        <Label top="10" class="total_journey_text" text="总公里"/>
      </View>
      <View top="30" layout="composite" height="Ti.UI.SIZE" width="Ti.UI.FILL" right="10%" left="10%">
        <View layout="vertical" left="0" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
          <ImageView class="run_icon" image="/images/runner-count.png"/>
          <Label top="10" class="icon_data" text="0" color="#000"/>
          <Label top="10" class="icon_text" text="总跑步次数"/>
        </View>
        <View backgroundColor="#000" layout="vertial" height="80" left="50%" width="1"/>
        <View layout="vertical" right="0" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
          <ImageView class="run_icon" image="/images/runner-speed-icon.png"/>
          <Label class="icon_data" text="0'00'"/>
          <Label top="10" class="icon_text" text="平均速度"/>
        </View>
      </View>
      <View id="runningByCardView" top="30" layout="vertical" height="Ti.UI.SIZE">
        <ImageView class="running_by_card_img" image="/images/circle-icon.png"/>
        <Label class="running_by_card_text" text="打卡跑步"/>
      </View>
    </View>
  </View>
</Alloy>
