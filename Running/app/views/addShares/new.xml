<Alloy>
  <Window id="window" layout="vertical" backgroundColor="#f7f7f7">
    <View class="header-title" layout="composite">
      <View class="container">
        <ImageView id="backImg" image="/images/left-arrow-icon.png" class="back-img" />
        <Label id="titleLabel" text="晒卡" class="share-label"/>
        <Label id="sendLabel" text="发送" class="send-label" />
      </View>
    </View>
    <View layout="vertical" height="Ti.UI.SIZE" backgroundColor="#fff" bottom="10">
      <View class="share-textArea-wrap">
        <TextArea id="shareTextArea" class="share-text-area" hintText=" 这一刻想说的话..." />
      </View>
      <View layout="horizontal" left="5" top="15" height="Ti.UI.SIZE">
        <ImageView id="runnerImage" image="/images/add-default-image.png" class="runner-image" />
        <ImageView id="addMoreImage" left="5" image="/images/add-moreImage-icon.png" class="runner-image" />
      </View>
      <View height="1" backgroundColor="#e5e5e5" top="10" />
    </View>
    <View layout="vertical" width="Ti.UI.FILL" height="Ti.UI.SIZE" top="25">
      <View height="1" backgroundColor="#e5e5e5" />
      <View width="Ti.UI.FILL" height="Ti.UI.SIZE" layout="horizontal" backgroundColor="#fff">
        <View height="60">
          <ImageView class="runner-data-image" image="/images/lead_time_black_image.png" />
          <Label text="晒跑步数据" width="Ti.UI.SIZE" height="Ti.UI.FILL" left="20%" />
          <View width="20%" height="Ti.UI.SIZE" right="10">
            <ImageView id="showRunningDataSwitch" class="greenButton" image="/images/greenButton.png" />
          </View>
        </View>
      </View>
      <View height="1" backgroundColor="#e5e5e5" />
      <View layout="horizontal" width="Ti.UI.FILL" height="Ti.UI.SIZE" backgroundColor="#fff">
        <View height="60">
          <ImageView class="runner-data-image" image="/images/location-icon.png" />
          <Label text="所在位置" width="Ti.UI.SIZE" height="Ti.UI.FILL" left="20%" />
          <View layout="horizontal" width="Ti.UI.SIZE" height="Ti.UI.SIZE" right="10">
            <Label id="locationCityLable" text="北京" left="10" />
            <Label id="locationAddressLable" text="森林公园" left="10" />
            <ImageView image="/images/right-arrow-icon.png" class="right_arrow" />
          </View>
        </View>
      </View>
    </View>
  </Window>
</Alloy>